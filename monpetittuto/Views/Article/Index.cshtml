@model IEnumerable<Article>
@{
    ViewData["Title"] = "Liste Articles";
}
<div class ="d-flex justify-content-between">
    <h1>Liste des Articles</h1>
    <div>
        <a class="btn btn-success" href="@Url.Action("Add", "Article")"><i class="bi bi-file-earmark-plus"></i> Ajoutez un article</a> 
       @*{@Html.ActionLink(" Ajoutez un article", "Add", "Article", null, new {@class = "btn btn-success"})}*@
    </div>
    
</div>

<table class="table table-hover" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Content)</th>
            <th>Edition</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var article in Model)
        {
            <tr>
                <td> @article.Id</td>
                <td> @article.Title</td>
                <td> @article.Content</td>
                <td><div class="btn btn-success">@Html.ActionLink("Modifier", "Update", new { id = @article.Id })</div></td>
                <td><div class="btn btn-danger">@Html.ActionLink("Supprimez", "Delete", new { id = @article.Id })</div></td>
                
            </tr>
        }
    </tbody>
</table>