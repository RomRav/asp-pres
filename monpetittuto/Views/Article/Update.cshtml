@model Article
@{
    ViewData["Title"] = "Modifiez un Articles";
}

<h1> Modifiez un article</h1>   
<form method="post"> 
    <div asp-validation-summary="All"></div>
    <div class="form-group p-2">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for='Title' class="text-danger"></span>
    </div>
    <div class="form-group p-2">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
         <span asp-validation-for='Content' class="text-danger"></span>
    </div>
    <div class="form-group p-2 ">
        <label asp-for="DateCreation" class="control-label"></label>
        <input asp-for="DateCreation" class="form-control"></input>
    </div>
    <div class="form-group p-2">
        <button type="submit" value="Modifiez un article" class="btn btn-primary">Modifiez un article</button>
        <a asp-action="Index" asp-controller="Article">Retour</a>
    </div>

</form>
